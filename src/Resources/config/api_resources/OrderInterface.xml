<?xml version="1.0" ?>

<resources xmlns="https://api-platform.com/schema/metadata"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://api-platform.com/schema/metadata https://api-platform.com/schema/metadata/metadata-2.0.xsd">

    <resource class="Sylius\Component\Core\Model\OrderInterface"
        shortName="Order"
    >

        <collectionOperations>
        </collectionOperations>

        <itemOperations>
            <itemOperation name="get">
                <attribute name="method">GET</attribute>
                <attribute name="path">/{channelCode}/carts/{id}</attribute><!-- actually {token} but API Platform uses hardcoded {id} route parameter -->
                <attribute name="normalization_context">
                    <attribute name="groups">
                        <attribute>sylius_shop_api_cart_read</attribute>
                    </attribute>
                </attribute>
                <attribute name="sylius_shop_api">true</attribute>
            </itemOperation>
        </itemOperations>

        <property name="tokenValue" identifier="true" />

    </resource>

</resources>
